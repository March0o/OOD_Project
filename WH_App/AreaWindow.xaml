<Window x:Class="WH_App.AreaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WH_App"
        mc:Ignorable="d"
        Title="AreaWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="lbxSections" HorizontalAlignment="Left" Height="158" Margin="34,122,0,0" VerticalAlignment="Top" Width="218" d:ItemsSource="{d:SampleData ItemCount=5}" DisplayMemberPath="id" SelectionChanged="lbxSections_SelectionChanged"/>
        <TextBlock x:Name="tblkStockpileId" HorizontalAlignment="Left" Height="29" Margin="267,122,0,0" TextWrapping="Wrap" Text="Select a section to display info" VerticalAlignment="Top" Width="290" FontSize="16"/>
        <Button x:Name="BtnAdd" Content="Add" HorizontalAlignment="Center" Height="40" Margin="0,304,0,0" VerticalAlignment="Top" Width="148" Click="BtnAdd_Click"/>
        <Button x:Name="BtnRemove" Content="Remove" HorizontalAlignment="Center" Height="40
                " Margin="0,349,0,0" VerticalAlignment="Top" Width="148" Click="BtnRemove_Click"/>
        <Button x:Name="BtnTransfer" Content="Transfer" HorizontalAlignment="Left" Height="40" Margin="554,349,0,0" VerticalAlignment="Top" Width="147" Click="BtnTransfer_Click"/>
        <ComboBox x:Name="cbxMoveTo" HorizontalAlignment="Left" Height="40" Margin="554,304,0,0" VerticalAlignment="Top" Width="147"/>
        <ListBox x:Name="lbxProducts" HorizontalAlignment="Left" Height="79" Margin="257,201,0,0" VerticalAlignment="Top" Width="518" d:ItemsSource="{d:SampleData ItemCount=5}" SelectedValuePath="product_id" SelectionChanged="lbxProducts_SelectionChanged"/>
        <TextBlock HorizontalAlignment="Left" Height="27" Margin="90,90,0,0" TextWrapping="Wrap" Text="Sections" VerticalAlignment="Top" Width="106" FontSize="18" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Height="27" Margin="414,90,0,0" TextWrapping="Wrap" Text="Stockpile Information" VerticalAlignment="Top" Width="204" FontSize="18" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Height="27" Margin="414,169,0,0" TextWrapping="Wrap" Text="Products" VerticalAlignment="Top" Width="204" FontSize="16" TextAlignment="Center"/>
        <TextBlock x:Name="tblkArea" HorizontalAlignment="Center" Height="44" Margin="0,10,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="318" FontSize="22" TextAlignment="Center"/>

    </Grid>
</Window>
