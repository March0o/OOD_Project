<Window x:Class="WH_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WH_App"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="lbxSections" HorizontalAlignment="Left" Height="158" Margin="105,59,0,0" VerticalAlignment="Top" Width="295" d:ItemsSource="{d:SampleData ItemCount=5}" DisplayMemberPath="id" SelectionChanged="lbxSections_SelectionChanged"/>
        <TextBlock x:Name="tblkStockpileId" HorizontalAlignment="Left" Height="65" Margin="429,59,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="290"/>
        <Button x:Name="BtnAdd" Content="Add" HorizontalAlignment="Left" Height="50" Margin="105,298,0,0" VerticalAlignment="Top" Width="147" Click="BtnAdd_Click"/>
        <Button x:Name="BtnRemove" Content="Remove" HorizontalAlignment="Center" Height="50" Margin="0,298,0,0" VerticalAlignment="Top" Width="148" Click="BtnRemove_Click"/>
        <Button x:Name="BtnTransfer" Content="Transfer" HorizontalAlignment="Left" Height="50" Margin="554,357,0,0" VerticalAlignment="Top" Width="147" Click="BtnTransfer_Click"/>
        <ComboBox x:Name="cbxMoveTo" HorizontalAlignment="Left" Height="42" Margin="554,302,0,0" VerticalAlignment="Top" Width="147"/>
        <ListBox x:Name="lbxProducts" HorizontalAlignment="Left" Height="79" Margin="429,138,0,0" VerticalAlignment="Top" Width="290" d:ItemsSource="{d:SampleData ItemCount=5}"/>

    </Grid>
</Window>
